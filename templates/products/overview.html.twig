{% extends 'base.html.twig' %}

{% block title %}Hello ProductsController!{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/products.css') }}">
{% endblock %}

{% block body %}
    {% for product in products %}
        <twig:ProductItem id="{{ product.id }}" title="{{ product.name }}" description="{{ product.description }}" pictureUrl="{{ product.image }}" />
    {% endfor %}
{% endblock %}
